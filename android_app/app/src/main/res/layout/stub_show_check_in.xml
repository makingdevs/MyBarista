<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="6">

    <ImageButton
        android:id="@+id/btnBarista"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:layout_weight="2"
        android:background="@drawable/background_accent_button"
        android:src="@drawable/ic_add_barist" />

    <ImageButton
        android:id="@+id/btnNote"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:layout_weight="2"
        android:background="@drawable/background_accent_button"
        android:src="@drawable/ic_add_notes" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/background_facebook_login"
        android:drawableStart="@drawable/ic_social_facebook"
        android:paddingEnd="@dimen/spacing_large"
        android:paddingStart="@dimen/spacing_large"
        android:text="@string/label_share_button"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>