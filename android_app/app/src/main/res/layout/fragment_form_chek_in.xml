<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="260dp"
        android:layout_height="34dp"
        android:text="@string/labelMethod"
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/methodSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/methods_arrays"
        android:prompt="@string/select_one"
        android:spinnerMode="dropdown"/>

    <EditText
        android:id="@+id/originField"
        style="@style/EditText.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/placeholderOrigin"/>

    <EditText
        android:id="@+id/priceField"
        style="@style/EditText.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/placeholderPrice"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/noteField"
        style="@style/EditText.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/placeholderNote"
        android:inputType="textMultiLine"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_venue"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/btnAddVenue"
        android:padding="@dimen/spacing_normal"/>

    <RatingBar
        android:id="@+id/rating_coffe_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:progressTint="#FFD700"/>

    <Button
        android:id="@+id/btnCheckIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_large"
        android:padding="@dimen/spacing_normal"
        android:text="@string/button_checkin"/>
</LinearLayout>

