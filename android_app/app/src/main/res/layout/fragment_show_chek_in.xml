<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/FrameLayout.withActionBar"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/method_label"
        style="@style/EditText.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/label_method"/>

    <TextView
        android:id="@+id/method_data"
        style="@style/EditText.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/origin_label"
        style="@style/EditText.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/label_origin"/>

    <TextView
        android:id="@+id/origin_data"
        style="@style/EditText.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/price_label"
        style="@style/EditText.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/label_price"/>

    <TextView
        android:id="@+id/price_data"
        style="@style/EditText.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/note_label"
        style="@style/EditText.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/label_note"/>

    <TextView
        android:id="@+id/note_data"
        style="@style/EditText.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"/>

</LinearLayout>
