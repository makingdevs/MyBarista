<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.makingdevs.mybarista"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    >
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.ListBrewActivity">
        </activity>
        <activity android:name=".ui.activity.CheckinActivity">
        </activity>
        <activity android:name=".ui.activity.ShowCheckinActivity">
        </activity>
        <activity android:name=".ui.activity.RegistrationActivity">
        </activity>
        <activity android:name=".ui.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.ProfileActivity">
        </activity>
        <activity android:name=".ui.activity.CameraEmptyActivity">
        </activity>
    </application>

</manifest>
